{
  "compilerOptions": {
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "target": "esnext",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "allowJs": true,
    "strict": true,
    "outDir": "./build/",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "docs/*"
  ],
  "include": [
    "src/**/*.ts"
  ]
}